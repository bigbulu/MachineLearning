<Window x:Class="FiveInARow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FiveInARow"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <DockPanel>
        <Canvas DockPanel.Dock="Left"
                Name="_board" Width="660" Height="660" Background="#E3C593" PreviewMouseMove="_board_PreviewMouseMove" PreviewMouseDown="_board_PreviewMouseDown">
        </Canvas>
        <Button DockPanel.Dock="Top" Click="StartGameButton_Click">Start Game</Button>
        <CheckBox DockPanel.Dock="Top" Name="_computerUseBlack">Computer use Black</CheckBox>
    </DockPanel>
</Window>
